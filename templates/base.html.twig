                    Mon compte <small>({{ app.user.firstname }})</small>
                {% else %}
           
              {# <a href="{{ path('app_login') }}"><button type="button" class="btn btn-outline-primary me-2">Login</button></a>
  <a href="{{ path('app_register') }}"><button type="button" class="btn btn-primary">Sign-up</button></a> #}
  
